<div class="row top-row">
    <div class="col s5">
        <div class="card">
            <div class="card-image">
                <img src="https://placekitten.com/200/201">
                <span class="card-title">I needs the pettings...</span>
            </div>
            <div class="card-content">
                <ul>
                    {{#each kittens}}
                    {{#unless pet}}
                    <li>
                        {{name}}
                        <a class="waves-effect waves-light btn-small purple accent-2 change-pet" data-id="{{id}}">Pet
                            Me</a>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="col s2"></div>

    <div class="col s5">
        <div class="card">
            <div class="card-image">
                <img src="https://placekitten.com/200/200">
                <span class="card-title black-text">...Ahhh so happy now</span>
            </div>
            <div class="card-content">
                <ul>
                    {{#each kittens}}
                    {{#if pet}}
                    <li> {{name}} </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s3"></div>
    <div class="col s6">
        <div class="card amber darken-2">
            <div class="card-content white-text">
                <span class="card-title center-align">Time to Add a Kitten!</span>
                <form class="create-form">
                    <div class="form-group">
                        <label for="ki" class=" kitten-text white-text">Kitten Name:</label>
                        <input type="text" id="ki" name="name" class="white">
                    </div>
                    <button class="waves-effect waves-light btn-small purple accent-2" type="submit">Add Kitten</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col s3"></div>
</div>